      rel="stylesheet"
    />

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class', // <-- enable class-based dark mode
            theme: {
            extend: {},
            }
        }
    </script>


    <!-- Alpine.js CDN -->
    <script
